{
  "version": 2,
  "builds": [
    { 
      "src": "client/package.json", 
      "use": "@vercel/static" 
    },
    { 
      "src": "server/src/app.js", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "server/src/app.js" 
    },
    { 
      "src": "/(.*)", 
      "dest": "client/build/index.html" 
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    }
  ]
}